<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Notifications">


    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40px"
        android:layout_marginLeft="60px"
        android:text="BRAINHUB"
        android:textColor="#D8BD2C"
        android:textColorLink="#D8BD2C"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notifs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40px"
        android:layout_marginStart="60px"
        android:layout_marginEnd="60px"
        android:text="NOTIFICATIONS"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40px"
            android:layout_marginLeft="60px"
            android:text="Today"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/tvLabel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40px"
            android:layout_marginLeft="60px"
            android:text="Earlier"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHomeBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/ivSavedBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/ivCreateBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/ivNotifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:id="@+id/ivProfileBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/sym_def_app_icon" />
    </LinearLayout>
</LinearLayout>