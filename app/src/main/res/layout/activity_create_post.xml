<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreatePost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40px"
            android:layout_marginLeft="60px"
            android:text="BRAINHUB"
            android:textColor="#D8BD2C"
            android:textColorLink="#D8BD2C"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="68dp"
            android:layout_height="36dp"
            android:layout_marginVertical="40px"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_delete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="62dp"
            android:layout_height="63dp"
            android:layout_marginLeft="60px"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="username"
            android:textSize="16sp" />

        <Button
            android:id="@+id/postBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="Post" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="Title"
            android:inputType="text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="Body"
            android:inputType="textMultiLine"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="Home"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_home" />

        <ImageView
            android:id="@+id/navSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="Saved"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_saved" />

        <ImageView
            android:id="@+id/navPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="Create"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_create" />

        <ImageView
            android:id="@+id/navNotif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="Notifications"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_notifications" />

        <ImageView
            android:id="@+id/navProf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="Profile"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_profile" />
    </LinearLayout>

</LinearLayout>