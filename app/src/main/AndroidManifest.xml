<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/brainhub_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/brainhub_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrainHub"
        tools:targetApi="31">
        <activity
            android:name=".Profile"
            android:exported="false" />
        <activity
            android:name=".Notifications"
            android:exported="false" />
        <activity
            android:name=".CreatePost"
            android:exported="false"
            android:theme="@style/Theme.BrainHub" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".WelcomeActivity" />
        <activity android:name=".Welcome2Activity" />
        <activity android:name=".WordOfTheDayActivity" />

    </application>

</manifest>